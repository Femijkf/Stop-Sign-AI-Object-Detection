{
    "manifest_version": 2,
    "name": "Google Maps Area Selection",
    "description": "Highlight an area on Google Maps and calculate building area.",
    "version": "1.0",
    "permissions": [
      "activeTab"
    ],
    "background": {
      "scripts": ["script.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "index.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }
  